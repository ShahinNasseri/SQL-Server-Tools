SELECT [PK].[TABLE_NAME] AS PK_Table
     , [PK].[COLUMN_NAME] AS PK_Column
     , [FK].[TABLE_NAME] AS FK_Table
     , [FK].[COLUMN_NAME] AS FK_Column
     , [RC].[UNIQUE_CONSTRAINT_NAME]
     , [RC].[CONSTRAINT_NAME]
     , IIF(K.[is_disabled] = 0, 'CHECK', 'NOCHECK') AS CheckStatus
FROM   [INFORMATION_SCHEMA].[REFERENTIAL_CONSTRAINTS] [RC]
       INNER JOIN [INFORMATION_SCHEMA].[CONSTRAINT_COLUMN_USAGE] [PK] ON [PK].[CONSTRAINT_NAME] = [RC].[UNIQUE_CONSTRAINT_NAME]
       INNER JOIN [INFORMATION_SCHEMA].[CONSTRAINT_COLUMN_USAGE] [FK] ON [FK].[CONSTRAINT_NAME] = [RC].[CONSTRAINT_NAME]
       INNER JOIN [sys].[foreign_keys] [K] ON [K].[name] = [RC].[CONSTRAINT_NAME]; --AND [is_disabled] = 1
--WHERE [PK].COLUMN_NAME = 'CompanyID'
